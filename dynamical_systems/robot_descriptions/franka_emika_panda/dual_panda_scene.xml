          pos="0.10 0 0"
          quat="0 0 0 1"
          size="0.003"
          type="sphere"
          rgba="1 1 0 1" />
    
    <!-- Site on the y+ face of the box -->
    <site name="target_face_minus_x"
          pos="-0.10 0 0"
          quat="0 0 0 1"
          size="0.003"
          type="sphere"
          rgba="1 1 0 1" />
  </body>
  
    <!-- Vention Table with a defined position and orientation -->
  <body name="vention_table" pos="0.0 -0.4 0.0" quat="0 0 0 1">
